<div class="row">
  <h4>Week: <%= @chatsession.week+"(Questions: "+@chatsession.questions.count.to_s+")" %></h4>
  <dl class="accordion" data-accordion>
  <% @chatsession.questions.each do |q| %>
    <dd class="accordion-navigation">
      <a href="#panel<%= q.id %>"><%= q.topic %></a>
      <div id="panel<%= q.id %>" class=<%="content" + if q.flag == "Q1:"; "active" else "" end %>>
        <ul class="small-block-grid-1 large-block-grid-3">
        <% q.answers.order("date ASC").each do |a| %>
          <li>
            <div class="answer-head">
              <%= link_to image_tag(a.author_img), "http://twitter.com/"+a.author %>
              <%= link_to "@"+a.author, "http://twitter.com/"+a.author %> -
              <%= link_to a.date.to_formatted_s(:short), "http://twitter.com/"+a.author+"/status/"+a.tweet_id %>
            </div>
            <div>
              <%= a.topic %>
            </div>
          </li>
        <% end %>
        </ul>
      </div>
    </dd>
  <% end %>
  </dl>
</div>